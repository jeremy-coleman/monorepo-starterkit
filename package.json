{
  "name": "monorepo-starterkit",
  "description": "React monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Jeremy Coleman",
  "license": "MIT",
  "workspaces":[
    "packages/*",
    "projects/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myorg/mymonorepo.git"
  },
  "scripts": {
    "bootstrap":"lerna bootstrap --hoist",
    "clean": "lerna run clean:packages --parallel",
    "start": "lerna run start-watch --parallel",
    "build": "lerna run build:packages --parallel",
    "rollit":"rollup -c rollup.bundles.js -w",
    "poststart-watch":"rollup -c rollup.bundles.js -w",
    "start-watch":"run-p rollit start",
    "dist":"run-s clean build rollit",
    "update-deps":"lerna exec npx upd --stream --parallel",
    "prettify": "pprettier --write packages/*/src/**/{*.js,*.jsx,*.ts,*.tsx}",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix"
  },
  "devDependencies": {
    "lerna-runner": "0.0.5",
    "lerna": "3.19.0",
    "prettier": "^1.19.1",
    "@types/classnames": "2.2.9",
    "@types/history": "4.7.3",
    "@types/node": "12.12.21",
    "@types/chroma-js": "^1.4.3",
    "@types/react": "16.9.16",
    "@types/react-dom": "16.9.4",
    "typescript": "3.7.3",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.1.0",
    "fork-ts-checker-webpack-plugin": "3.1.1",
    "ts-loader": "6.2.1",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "webpack-clean-obsolete-chunks":"0.4.0",
    "webpack": "4.41.3",
    "webpack-serve": "3.2.0",
    "npm-run-all":"4.1.5",
    "fs-jetpack":"2.2.3",
    "rollup":"1.27.13",
    "@mixer/parallel-prettier": "1.0.0",
    "@rollup/plugin-alias": "2.2.0",
    "@rollup/plugin-typescript": "2.0.1",
    "@rollup/plugin-run": "1.1.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 120
  }
}
