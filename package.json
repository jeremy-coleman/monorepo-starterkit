{
  "name": "monorepo-starterkit",
  "description": "React monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Jeremy Coleman",
  "license": "MIT",
  "workspaces":[
    "packages/*",
    "projects/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/myorg/mymonorepo.git"
  },
  "scripts": {
    "clean": "lerna run clean:packages --parallel",
    "start": "lerna run start-watch --parallel",
    "build": "lerna run build:packages --parallel",
    "rollit":"rollup -c rollup.bundles.js",
    "poststart-watch":"rollup -c rollup.bundles.js -w",
    "start-watch":"run-p start",
    "dist":"run-s clean build rollit",
    "update-deps":"lerna exec npx upd --stream --parallel",
    "prettify": "prettier --print-width 140 --tab-width 2 --single-quote --write 'packages/*/src/**/{*.js,*.ts*}'",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix"
  },
  "devDependencies": {
    "lerna": "3.14.1",
    "prettier": "^1.17.1",
    "@types/classnames": "2.2.8",
    "@types/history": "4.7.2",
    "@types/node": "12.0.4",
    "@types/chroma-js": "^1.4.1",
    "@types/react": "16.8.19",
    "@types/react-dom": "16.8.4",
    "typescript": "3.5.1",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.0.0",
    "fork-ts-checker-webpack-plugin": "0.5.2",
    "ts-loader": "5.3.3",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "webpack-clean-obsolete-chunks":"0.4.0",
    "webpack": "4.32.2",
    "webpack-serve": "3.1.0",
    "npm-run-all":"4.1.5",
    "fs-jetpack":"2.2.2",
    "rollup":"1.13.1",
    "rollup-plugin-node-resolve":"5.0.1",
    "rollup-plugin-peer-deps-external":"2.2.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "printWidth": 120
  }
}
