{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@state": ["src/state"],
      "@components/*": ["src/components/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
