{
  "name": "next-workspace",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "sideEffects": false,
  "scripts": {
    "start": "gulp start --max-old-space-size=4096",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix",
    "prettify:packages": "prettier --print-width 140 --tab-width 2 --single-quote --write 'packages/*/src/**/{*.js,*.ts*}'",
    "prettify": "prettier --write ./src/**/*{.js,.jsx,.tsx,.ts}"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "parser": "typescript",
    "printWidth": 140,
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "useTabs": false,
    "singleQuote": true
  },
  "dependencies": {
    "next": "9.1.6",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-is": "16.12.0",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.149",
    "@types/node": "13.1.1",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/styled-jsx": "2.2.8",
    "babel-plugin-module-resolver": "4.0.0",
    "gulp": "4.0.2",
    "gulp-typescript": "6.0.0-alpha.1",
    "html-webpack-plugin": "3.2.0",
    "lodash": "4.17.15",
    "log-symbols": "3.0.0",
    "sucrase": "3.11.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.7.4",
    "typescript-tslint-plugin": "0.5.5",
    "webpack": "4.41.5",
    "webpack-clean-obsolete-chunks": "0.4.0",
    "webpack-cli": "3.3.10",
    "webpack-plugin-serve": "0.12.1"
  }
}
