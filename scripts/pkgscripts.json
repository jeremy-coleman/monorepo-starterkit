{
  "scripts": {
    "clean": "lerna run clean:packages --parallel",
    "start": "lerna run start-watch --parallel",
    "build": "tsc -b tsconfig.base.json",
    "rollit":"rollup -c rollup.bundles.js",
    "poststart-watch":"rollup -c rollup.bundles.js -w",
    "start-watch":"run-p start",
    "dist":"run-s clean build rollit",
    "watch": "tsc --build packages/tsconfig.project.json --watch",
    "update-tsconfigs": "node scripts/update-package-tsconfig.js",
    "update-pkgjsons": "node scripts/update-package-json.js",
    "update-pkgs": "yarn update-tsconfigs",
    "update-deps":"lerna exec npx upd --stream --parallel",
    "format": "prettier --print-width 140 --tab-width 2 --single-quote --write 'packages/*/src/**/{*.js,*.ts*}'",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix"
  }
}
